<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android.tourguide">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/tourguide"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/tourguide"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Restaurants"
            android:label="Restaurants">
        </activity>
        <activity android:name=".Cinemas"
            android:label="Cinemas"></activity>
        <activity android:name=".Historical_places"
            android:label="Historical Places"/>
        <activity android:name=".Shopping_malls"></activity>
    </application>

</manifest>